datasource db {
   provider = "sqlite"
   url      = env("DATABASE_URL")
}

generator client {
   provider = "prisma-client-js"
}

model User {
   id    Int     @id @default(autoincrement())
   email String?
   name  String
   logs  Prompt[]
}

model Prompt {
   id         Int      @id @default(autoincrement())
   prompt     String
   response   String?
   createdAt  DateTime @default(now())
   tokenUsage Int      @default(0)
   responseId String?
   userId     Int?
   user       User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
}


